{
  "metadata": [
    {
      "src": [
        {
          "src": "repos",
          "files": [
            "**/*.csproj"
          ],
          "exclude": [
            "**/Nuke.ToolGenerator.csproj",
            "**/Nuke.MSBuildLocator.csproj",
            "**/Nuke.*.Tests.csproj",
            "**/.build.csproj",
            "**/obj/**",
            "**/bin/**",
          ]
        }
      ],
      "dest": "api",
      "properties": {
          "TargetFramework": "net46"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "favicons/**"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "globalMetadata": {
      "_appTitle": "nuke-build",
      "_enableSearch": true,
      "_disableBreadcrumb": true
    },
    "postProcessors": [],
    "noLangKeyword": false,
    "template": ["./template"]
  }
}