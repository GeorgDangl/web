{
  "metadata": [
    {
      "src": [
        {
          "src": "repos",
          "files": [ "**/*.csproj" ],
          "exclude": [
            "**/Nuke.ToolGenerator.csproj",
            "**/Nuke.MSBuildLocator.csproj",
            "**/Nuke.*.Tests.csproj",
            "**/.build.csproj",
            "**/obj/**",
            "**/bin/**"
          ]
        }
      ],
      "properties": {
        "TargetFramework": "net461"
      },
      "dest": "source/api"
    }
  ],

  "build": {
    "content": [
      {
        "src": "source",
        "files": [ "**/*.md", "**/*.yml" ]
      }
    ],
    "resource": [
      {
        "src": "source",
        "files": [ "images/**", "favicons/**" ]
      }
    ],
    "overwrite": [
      {
        "src": "repos",
        "files": [ "*.disclaimer.md", "*/*/specs/*.md" ]
      }
    ],

    "template": [ "default", "source/template" ],
    "dest": "output/site",

    "globalMetadata": {
      "_appTitle": "NUKE",
      "_enableSearch": true,
      "_disableBreadcrumb": true
    },


    "noLangKeyword": false
  }
}
